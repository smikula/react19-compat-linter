{
    "compilerOptions": {
        "module": "nodenext",
        "target": "es2015",
        "declaration": true,
        "sourceMap": false,
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src/**/*"]
}
